# Use the same base as the production Dockerfile for consistency
FROM node:24-alpine AS base

# Install dependencies and tools for development
FROM base AS deps
RUN apk add --no-cache libc6-compat git
WORKDIR /app

# Copy package files and install dependencies
COPY package.json yarn.lock* package-lock.json* pnpm-lock.yaml* ./
RUN corepack enable pnpm && pnpm i --frozen-lockfile

# Development image: copy all files and enable live-reload
FROM base AS dev
WORKDIR /app

# Copy dependencies from the deps stage
COPY --from=deps /app/node_modules ./node_modules
COPY . .

# Enable pnpm and start the dev server
RUN corepack enable pnpm

# Expose the dev server port (default for Next.js is 3000)
EXPOSE 3000

# Start the dev server with live-reload
CMD ["pnpm", "dev"]
